<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:padding="20dp">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:gravity="center"        android:text="Update Data"        android:textSize="25sp"        android:textStyle="bold" />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:inputType="number"        android:text="Plat Nomer Kendaraan" />    <EditText        android:id="@+id/et_nama_update"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:hint="Plat Kendaraan"        android:inputType="text" />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:text="Tanggal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <EditText            android:id="@+id/et_tgl_update"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_weight="1"            android:enabled="false"            android:hint="Tanggal Daftar"            android:textColor="@color/black" />        <Button            android:id="@+id/btnDateUpdate"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/white"            android:backgroundTint="@color/teal_200"            android:text="Date" />    </LinearLayout>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:text="Penerimaan" />    <EditText        android:id="@+id/et_penerimaan_update"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Penerimaan"        android:inputType="number" />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:text="Produksi" />    <EditText        android:id="@+id/et_produksi_update"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="produksi"        android:inputType="number" />    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_marginTop="32dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <com.google.android.material.button.MaterialButton            android:id="@+id/btnDeleteItem"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="32dp"            android:text="Delete"            app:backgroundTint="#E83838"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@+id/simpanDataUpdate"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <Button            android:id="@+id/simpanDataUpdate"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/white"            android:backgroundTint="@color/teal_200"            android:text="Simpan &amp; Update"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout></LinearLayout>